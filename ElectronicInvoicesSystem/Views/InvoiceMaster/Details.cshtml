@model ElectronicInvoicesSystem.ModelsView.InvoiceMasterViewModel

@{
    ViewData["Title"] = "تفاصيل المستند";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<link href="~/lib/bootstrap-v4-rtl-main/dist/css/bootstrap-rtl.css" rel="stylesheet" />

<h4>تفاصيل المستند</h4>

<div style="margin:2px 10px 2px 10px">
    <div class="d-inline gap-2 col-2 mx-auto">
        <a class="btn btn-primary" asp-action="Refresh" asp-route-id="@Model.id"> <i class="fa fa-save"></i> تحديث </a>
        <a class="btn btn-success" asp-action="PrintViewToPdf" asp-route-id="@Model.id"> <i class="fa fa-file-o"></i> طاعة </a>
        <a class="btn btn-info" asp-action="CancelDocument" asp-route-id="@Model.id"> <i class="fa fa-list-ol"></i> إلغاء</a>
        <a class="btn btn-behance" asp-action="Index" > <i class="fa fa-list-ol"></i> عودة للقائمة</a>
   
    </div>
    <hr />
    <div class="row">
        <div class="row row-cols-3">
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.code)
                    @*@Html.DisplayFor(model => model.code)*@
                    <input asp-for="code" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.date)
                    @*@Html.DisplayFor(model => model.date)*@
                    <input asp-for="date" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.customerName)
                    @*@Html.DisplayFor(model => model.customerName)*@
                    <input asp-for="customerName" class="form-control" readonly />
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="row row-cols-3">
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.curuncyName)
                    @*@Html.DisplayFor(model => model.curuncyName)*@
                    <input asp-for="curuncyName" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.invTotal)
                    @*@Html.DisplayFor(model => model.invTotal)*@
                    <input asp-for="invTotal" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.invDiscount)
                    @*@Html.DisplayFor(model => model.invDiscount)*@
                    <input asp-for="invDiscount" class="form-control" readonly />
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="row row-cols-3">
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.invTax)
                    @*@Html.DisplayFor(model => model.invTax)*@
                    <input asp-for="invTax" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.invNet)
                    @*@Html.DisplayFor(model => model.invNet)*@
                    <input asp-for="invNet" class="form-control" readonly />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.DocTypeName)
                    @*@Html.DisplayFor(model => model.DocTypeName)*@
                    <input asp-for="DocTypeName" class="form-control" readonly />
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="row row-cols-3">
            <div class="col">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.invState)
                    @if (Model.invState == "Valid")
                    {
                        <input asp-for="invState" class="form-control text-success" readonly />
                    }
                    else if (Model.invState == "Invalid")
                    {
                        <input asp-for="invState" class="form-control text-danger" readonly />
                    }
                    else
                    {
                        <input asp-for="invState" class="form-control text-primary" readonly />
                    }

                </div>
            </div>
            <div class="col">
                <div class="form-group">

                </div>
            </div>
            <div class="col">
                <div class="form-group">

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model.InvoiceDetails.Count > 0)
        {
            <table class="table table-sm table-hover table-striped">
                <thead class="text-left">
                    <tr class="bg-secondary">
                        <th>@Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().itemName)</th>
                        <th>@Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().Qty)</th>
                        <th>@Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().itemName)</th>
                        <th>@Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().price)</th>
                        <th>@Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().discountValue)</th>
                        <th>@Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().taxValue)</th>
                        <th>@Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().itemNetValue)</th>
                    </tr>
                </thead>
                <tbody class="text-left">
                    @foreach (var item in Model.InvoiceDetails)
                    {
                        <tr>
                            <td class="text-left">@Html.DisplayFor(model => item.itemName)</td>
                            <td>@Html.DisplayFor(model => item.Qty)</td>
                            <td>@Html.DisplayFor(model => item.itemName)</td>
                            <td>@Html.DisplayFor(model => item.price)</td>
                            <td>@Html.DisplayFor(model => item.discountValue)</td>
                            <td>@Html.DisplayFor(model => item.taxValue)</td>
                            <td>@Html.DisplayFor(model => item.itemNetValue)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

